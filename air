  server {
    listen 80;
    server_name localhost;  # или localhost для разработки

    # Раздача статических файлов
    root /usr/share/nginx/static;
    index reg.html;

    location ~ \.html$ {
    try_files $uri =404;
  }

    # Проксирование API-запросов к бэкенду
    location /api/ {
    proxy_pass http://localhost:8012/;  # адрес вашего бэкенда
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }

    # Обработка форм
    location /submit-form {
    proxy_pass http://localhost:8012/auth;  # эндпоинт бэкенда
    proxy_set_header Content-Type "application/x-www-form-urlencoded";
    proxy_set_header Host $host;
    proxy_pass_request_headers on;
    }
  }